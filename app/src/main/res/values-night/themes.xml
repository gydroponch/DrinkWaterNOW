<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TimePickerFragmentTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/darkerBlueForStatusBar</item>
        <item name="colorControlNormal">@color/blueForStatusBar</item>
        <item name="colorOnPrimary">@color/darkerBlueForStatusBar</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#00f</item>
    </style>

    <style name="Theme.drinkwaternow" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/blueForStatusBar</item>
        <item name="colorPrimaryVariant">@color/darkerBlueForStatusBar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkestBlueForStatusBar</item>
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>
</resources>